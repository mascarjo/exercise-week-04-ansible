---
- name:  Assignment playbooks
  hosts: cisco
  gather_facts: no
  
  tasks:

    - name: Set hostname
      cisco.ios.ios_config:
        lines: hostname {{ inventory_hostname }}
    - name: Set login banner
      cisco.ios.ios_banner:
        banner: login
        text: |
          This is Johans' login banner
          Welcome to {{ inventory_hostname }}
        state: present